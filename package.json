{
  "name": "historia-local-web-app",
  "version": "1.7.0",
  "description": "Historia Local Web App",
  "main": "main.js",
  "scripts": {
    "start": "electron . --dev",
    "electron:build": "electron-builder"
  },
  "author": "Historia.Network",
  "license": "ISC",
  "build": {
    "appId": "com.historia.localwebapplication",
    "productName": "hlwa",
    "directories": {
      "output": "dist3"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "Historia-Local-Web-App-OSX-x86_x64-v${version}.zip",
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "Historia-Local-Web-App-Windows-x86_x64-v${version}.zip",
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "HistoriaOffical",
        "repo": "Historia-Local-Web-Application"
      }
    ],
    "extraResources": [
      {
        "from": "./assets/HistoriaLocal/",
        "to": "HistoriaLocal",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./requirements/",
        "to": "requirements",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "main.js",
      "index.html",
      "node_modules/",
      "preload.js",
      "renderer.js",
      "css/",
      "**/*"
    ]
  },
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-log": "^5.1.5",
    "electron-updater": "^6.2.1",
    "ipc": "^0.0.1",
    "ps-node": "^0.1.6",
    "winston": "^3.11.0",
    "ws": "^8.17.0"
  }
}
