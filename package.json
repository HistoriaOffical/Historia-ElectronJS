{
  "name": "historia-local-web-app",
  "version": "1.7.0",
  "description": "Historia Local Web App",
  "main": "main.js",
  "scripts": {
    "start": "electron . --dev",
    "electron:build": "electron-builder"
  },
  "author": "Historia.Network",
  "license": "ISC",
  "build": {
    "appId": "com.historia.localwebapplication",
    "publish": [
    {
        "provider": "github",
        "owner": "HistoriaOffical",  
        "repo": "Historia-Local-Web-Application"  
      }
    ]
    "productName": "hlwa",
    "directories": {
      "output": "dist3"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.png"
    },
    "extraResources": [
      {
        "from": "./assets/HistoriaLocal/",
        "to": "HistoriaLocal",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./requirements/",
        "to": "requirements",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "main.js",
      "index.html",
      "node_modules/",
	  "preload.js",
	  "renderer.js",
	  "css/",
	  "**/*"
    ]
  },
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "ipc": "^0.0.1",
    "ps-node": "^0.1.6",
    "winston": "^3.11.0",
    "ws": "^8.17.0"
  }
}
